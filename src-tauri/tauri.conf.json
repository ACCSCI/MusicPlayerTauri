{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sonic",
  "version": "0.1.0",
  "identifier": "com.sonic.app",
"build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sonic",
        "width": 400,
        "height": 850,
        "minWidth": 360,
        "minHeight": 640,
        "decorations": true,
        "transparent": false,
        "center": true,
        "resizable": true
      }
    ],
"security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; connect-src 'self' https://api.bilibili.com https://*.bilibili.com; img-src 'self' asset: http://asset.localhost https://*; media-src 'self' asset: http://asset.localhost blob: https://*; script-src 'self' 'unsafe-inline';",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "capabilities": [
        "default"
      ]
    }
  },
"bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "permissions": ["INTERNET", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    }
  }
}